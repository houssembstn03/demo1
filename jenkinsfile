pipeline{
    agent any
   tools{
    maven 'maven-3.8.3'
    }
  environment{
    PATH= "${PATH}"
  }
    stages{
        stage("git checkout"){
            steps{
               git credentialsId: 'githubID', url: 'https://github.com/houssembstn03/demo1.git'
            }
        }
        stage("maven build"){
            steps{
                sh "mvn clean package"
                sh "mv target/*.war target/demo1.war"
            }
            
        }
        stage("deploy"){
            steps{

            sshagent(['tomcat-debian2']) {
   
                sh """
                scp -o StrictHostKeyChecking=no target/demo1.war  
                root@192.168.1.15:/opt/tomcat/webapps/
                ssh root@192.168.1.15 /opt/tomcat/bin/shutdown.sh
                ssh root@192.168.1.15 /opt/tomcat/bin/startup.sh
                """
                 } 
            }
        }

    }
}
